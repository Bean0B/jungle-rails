<h1>Welcome back</h1>


<section class="login-new">

  <header class="page-header">
    <h2>Log in</h2>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag '/login' do %>

        <div class="form-group">
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </div>

        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <%= submit_tag 'Log in', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</section>